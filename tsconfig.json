{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "~/src/*": ["src/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "lib": ["esnext"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
